{
  "name": "nanowrimo2025",
  "version": "1.0.0",
  "description": "Interactive fiction project for NaNoWriMo 2025",
  "scripts": {
    "build": "npm run build:main && npm run build:proofread && npm run build:allpaths && npm run build:metrics && npm run build:story-bible",
    "build:main": "tweego src -o dist/index.html --format=harlowe-3.3.9",
    "build:proofread": "tweego src -o dist/proofread.html --format=paperthin-1.0.0",
    "build:allpaths": "./scripts/build-allpaths.sh",
    "build:metrics": "./scripts/build-metrics.sh",
    "build:story-bible": "./scripts/build-story-bible.sh || true",
    "metrics": "python3 scripts/calculate-metrics.py",
    "dev": "tweego src -o dist/index.html --format=harlowe-3.3.9 --watch",
    "dev:proofread": "tweego src -o dist/proofread.html --format=paperthin-1.0.0 --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "twine",
    "interactive-fiction",
    "nanowrimo"
  ],
  "author": "",
  "license": "ISC"
}
