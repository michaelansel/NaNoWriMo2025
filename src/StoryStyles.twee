/* LIGHT THEME (default when system doesn't prefer dark mode) */
@media (prefers-color-scheme: light), (prefers-color-scheme: no-preference) {
	body {
		background: #fff;
	}

	tw-story {
		background: #fff;
		color: #404040;
	}

	h1, h2, h3 {
		color: #121212;
	}

	.enchantment-link, tw-link, a {
		color: #1e70bf;
	}

	.enchantment-link:visited, tw-link:visited, .enchantment-link.visited, tw-link.visited, a:visited {
		color: #7b3ba6;
	}

	.enchantment-link:hover, tw-link:hover, a:hover {
		color: #0d4d87;
	}

	@keyframes pulsein {
		from {
			color: #00bfff;
			text-shadow: 0 0 1em #00bfff;
		}
		to {
			color: inherit;
			text-shadow: 0 0;
		}
	}
}

/* DARK THEME (activates when system prefers dark mode) */
@media (prefers-color-scheme: dark) {
	body {
		background: #000;
	}

	tw-story {
		color: #d5d5d5;
		background: #000;
	}

	h1, h2, h3 {
		color: #eaeaea;
	}

	.enchantment-link, tw-link, a {
		color: #58a6ff;
	}

	.enchantment-link:visited, tw-link:visited, .enchantment-link.visited, tw-link.visited, a:visited {
		color: #bc8cff;
	}

	.enchantment-link:hover, tw-link:hover, a:hover {
		color: #79c0ff;
	}

	@keyframes pulsein {
		from {
			color: #79c0ff;
			text-shadow: 0 0 1em #79c0ff;
		}
		to {
			color: inherit;
			text-shadow: 0 0;
		}
	}
}

